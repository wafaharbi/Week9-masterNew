<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wafa.studentapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupStudent" />
        <activity android:name=".SignupParent" />
        <activity android:name=".SignupTeacher" />
        <activity android:name=".LoginStudent" />
        <activity
            android:name=".StudentHome"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentInfo"
            android:label="Profile" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".StudentUpdateInfo" />
        <activity android:name=".ParentHome" />
        <activity android:name=".LoginParent" />
        <activity android:name=".LoginTeacher" />
        <activity android:name=".ParentInfo" />
        <activity android:name=".TeacherInfo" />
        <activity android:name=".TeacherUpdate" />
        <activity android:name=".ParentUpadate" />
        <activity
            android:name=".Notes"
            android:label="Notes" />
        <activity android:name=".NewNote" />
        <activity
            android:name=".FilesUpload"
            android:label="Upload Files" />
        <activity android:name=".ViewUploadsActivity" />
        <activity
            android:name=".CourseNames"
            android:label="Course Names" />
        <activity android:name=".ProfileActivity" />
    </application>

</manifest>